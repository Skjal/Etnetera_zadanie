//- FUNCTIONS
              
//- make carousel arrow
mixin arrows(idName, className)
  div(id=idName, class=className)

//- make carousel slide  
mixin carouselContent(items)
  .carousel__wrapper__content
    .carousel__wrapper__content__text
      h2.carousel__wrapper__content__text__heading= items.heading
      p.carousel__wrapper__content__text__paragraph1= items.paragraph1
      p.carousel__wrapper__content__text__paragraph2= items.paragraph2
    .carousel__wrapper__content__button
      p= items.button 
    
//- HTML 
header
  +arrows("arrow--left", "arrows")
  +arrows("arrow--right", "arrows")
  
  .carousel
    .carousel__wrapper
      +carouselContent(slide1)
      +carouselContent(slide2)
      +carouselContent(slide3)
        
     
        
        
